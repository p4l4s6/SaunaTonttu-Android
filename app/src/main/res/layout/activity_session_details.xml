<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.activity.SessionDetailsActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="15dp">


        <TextView
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Session Details"
            android:textColor="@color/blue_dark" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="15dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:weightSum="2"
           android:layout_height="wrap_content">

           <LinearLayout
               android:padding="10dp"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Date : "
                   android:textColor="@color/black" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Start Time : "
                   android:textColor="@color/black" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="End Time : "
                   android:textColor="@color/black" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Total Duration: "
                   android:textColor="@color/black" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Average Temp: "
                   android:textColor="@color/black" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Average Humidity: "
                   android:textColor="@color/black" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Average Pressure: "
                   android:textColor="@color/black" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Calories Burned: "
                   android:textColor="@color/black" />



           </LinearLayout>
           <LinearLayout
               android:padding="10dp"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <TextView
                   android:textStyle="bold"
                   android:id="@+id/s_date"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Date : "
                   android:textColor="@color/black" />

               <TextView
                   android:textStyle="bold"
                   android:id="@+id/s_start_time"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Start Time : "
                   android:textColor="@color/black" />

               <TextView
                   android:textStyle="bold"
                   android:id="@+id/s_end_time"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="End Time : "
                   android:textColor="@color/black" />

               <TextView
                   android:textStyle="bold"
                   android:id="@+id/s_total_duration"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Total Duration: "
                   android:textColor="@color/black" />

               <TextView
                   android:textStyle="bold"
                   android:id="@+id/s_avg_temp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Average Temp: "
                   android:textColor="@color/black" />

               <TextView
                   android:textStyle="bold"
                   android:id="@+id/s_avg_humid"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Average Humidity: "
                   android:textColor="@color/black" />

               <TextView
                   android:textStyle="bold"
                   android:id="@+id/s_avg_pressure"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Average Pressure: "
                   android:textColor="@color/black" />

               <TextView
                   android:textStyle="bold"
                   android:id="@+id/s_avg_calories"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:text="Calories Burned: "
                   android:textColor="@color/black" />



           </LinearLayout>

       </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>